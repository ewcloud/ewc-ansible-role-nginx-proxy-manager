services:
  app:
    image: "jc21/nginx-proxy-manager:2.10.3"
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "{{ npm_admin_ui_port }}:81"
    environment:
      DB_SQLITE_FILE: "/data/database.sqlite"
      DISABLE_IPV6: "true"
    volumes:
      - "/opt/nginx-proxy/data:/data"
      - "/opt/nginx-proxy/letsencrypt:/etc/letsencrypt"
